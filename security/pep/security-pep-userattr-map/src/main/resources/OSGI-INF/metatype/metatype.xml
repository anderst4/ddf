<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

    <OCD name="Expansion Service for User Attributes" id="ddf.security.user.attribute.mapping">
        <AD description="Attribute separator - used to separate attributes in replacement strings - defaults to space (specified by no value)."
            name="Attribute Separator" id="attributeSeparator" required="false"
            type="String" cardinality="1" default=" " />

        <AD description="Rules to expand user attributes to different or enhanced values. Format of each rule is <attributeName>:<original>[:<replacement>]. Where <attributeName> is the original attribute name, <original> is the orignal value of that attribute that is to be changed, <replacement> is an optional value that will replace the original value. An empty <replacement> value will remove the original attribute."
            name="Expansion Rules List" id="expansionRules" required="false"
            type="String" cardinality="-100" default="" />
    </OCD>

    <Designate pid="ddf.security.user.attribute.mapping">
        <Object ocdref="ddf.security.user.attribute.mapping" />
    </Designate>

</metatype:MetaData>